{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es2016",
    "resolveJsonModule": true,
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "types": ["node", "@types/bcryptjs"],
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "cypress/**/*" // Exclude the entire "cypress" folder
  ]
}
